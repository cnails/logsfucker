{
  "name": "logsfucker-monorepo",
  "version": "1.0.0",
  "description": "Full-stack приложение для сбора и анализа логов",
  "private": true,
  "scripts": {
    "backend:dev": "cd backend && npm run dev",
    "backend:deploy": "cd backend && npm run deploy",
    "backend:migrate": "cd backend && npm run d1:migrate",
    "backend:test": "cd backend && npm run test:generate",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:preview": "cd frontend && npm run preview",
    "dev": "npm-run-all --parallel backend:dev frontend:dev"
  },
  "keywords": ["logs", "cloudflare", "d1", "monitoring"],
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
